@page
@model MyAPI.src.Views.Account.LoginModel

@section LoginStyles {
    <link href="@Url.Content("~/css/Login.css")" rel="stylesheet" type="text/css" />
}

@{
    ViewData["Title"] = "Login Page";
}

<form method="post">
    <label asp-for="Email">E-mail</label><br>
    <input asp-for="Email"><br>
    <span asp-validation-for="Email"></span><br><br>

    <label asp-for="Password">Password</label><br>
    <input type="password" asp-for="Password"><br>
    <span asp-validation-for="Password"></span><br><br>

    <button type="submit">Login</button>
</form>